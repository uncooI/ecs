@page "/auth/home"
@model Roblox.Website.Pages.Home

@{
    Layout = "Shared/_Layout";
}

@section MetaTags {
    <title>Welcome to Shklurb!</title>
    <meta name="description" content="Play and connect with Shklurb. Nostalgic fun, modern privacy. No keys, no drama, all browser-based.">
    <meta name="twitter:card" content="summary" />
    <meta property="og:url" content="https://shklurb.com" />
    <meta property="og:title" content="Welcome to Shklurb!" />
    <meta property="og:description" content="Play and connect with Shklurb. Nostalgic fun, modern privacy. No keys, no drama, all browser-based." />
    <meta property="og:image" content="/UnsecuredContent/shklurb-logo.png" />
}

<style>
    @import url('https://fonts.googleapis.com/css?family=Segoe+UI:700,400|Tahoma:700,400');

    body {
        background: linear-gradient(135deg, #e2f0ff 0%, #7ad0ff 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
    }
    .aero-logo {
        margin: 48px auto 18px auto;
        display: block;
        width: 340px;
        max-width: 92vw;
        filter: drop-shadow(0 8px 24px #8ed7f5cc);
        border-radius: 38px;
        background: rgba(255,255,255,0.22);
        padding: 14px 30px 10px 30px;
        box-shadow: 0 2px 28px #5ee0ff66, 0 0 0 4px #a8e6ff99 inset;
    }
    .frutiger-navbar {
        display: flex;
        gap: 26px;
        justify-content: center;
        background: linear-gradient(90deg, #aeeaff95 0%, #73cbfcce 100%);
        border-radius: 30px;
        box-shadow: 0 4px 20px #00bfff55;
        padding: 18px 40px;
        margin: 18px auto 38px auto;
        width: fit-content;
        font-size: 1.16rem;
    }
    .frutiger-navbar a {
        color: #065388;
        text-decoration: none;
        font-weight: bold;
        padding: 8px 26px;
        border-radius: 17px;
        background: linear-gradient(180deg, #e0f6ff 80%, #a8e6ff 100%);
        box-shadow: 0 1px 6px #94e8ff44;
        transition: background 0.18s, box-shadow 0.18s, color 0.15s;
    }
    .frutiger-navbar a:hover {
        background: linear-gradient(180deg, #b9eaff 60%, #6dd8ff 100%);
        color: #0075cc;
        box-shadow: 0 4px 18px #b4f0ff88, 0 0 0 2px #23caf899 inset;
    }

    .carousel-frutiger {
        background: linear-gradient(135deg, #82e5fd 80%, #44baff 100%);
        border-radius: 32px;
        box-shadow: 0 2px 28px #5ee0ff42, 0 0 0 2px #7ad0ff66 inset;
        margin-bottom: 42px;
        overflow: hidden;
    }
    .carousel-inner {
        opacity: 0.85 !important;
        border-radius: 32px;
    }
    img.c-home {
        max-height: 58vh;
        min-height: 320px;
        object-fit: cover;
        border-radius: 32px;
        width: 100%;
    }
    .carousel-text {
        z-index: 3;
        position: absolute;
        top: 12vw;
        left: 0;
        right: 0;
        text-shadow: 0 1px 6px #0077b588, 0 4px 24px #8ee2ff99;
        text-align: center;
    }
    .carousel-text h1 {
        font-size: 4rem;
        color: #fff;
        letter-spacing: 0.03em;
        text-shadow: 0 4px 14px #037ae6bb, 0 8px 30px #54c8fc77;
        padding-top: 1rem;
    }
    .carousel-text p {
        color: #f8fbff;
        font-weight: 500;
        font-size: 1.23rem;
        background: rgba(22, 107, 169, 0.28);
        border-radius: 18px;
        padding: 8px 32px;
        margin: 18px auto 0 auto;
        display: inline-block;
        box-shadow: 0 2px 16px #74d6ff45;
    }
    .main-aero-card {
        margin: 50px auto 0 auto;
        background: linear-gradient(120deg, #f7fdff 60%, #8feeff30 100%);
        border-radius: 38px;
        box-shadow: 0 10px 60px #6fc6fc29, 0 2px 8px #7cdeff30;
        padding: 44px 44px 32px 44px;
        max-width: 630px;
        width: 98vw;
        text-align: center;
    }
    .main-aero-card h3 {
        font-size: 2em;
        color: #066bb8;
        margin-bottom: 10px;
        text-shadow: 0 2px 8px #e8fcff6b;
    }
    .main-aero-card p {
        font-size: 1.19em;
        color: #166ba9;
        line-height: 1.6;
        margin-bottom: 20px;
    }
    .cta-button {
        font-size: 1.18em;
        background: linear-gradient(90deg, #30d5fc 10%, #5ec5ff 100%);
        border: none;
        color: #fff;
        padding: 16px 54px;
        border-radius: 22px;
        font-weight: bold;
        box-shadow: 0 8px 36px #00bcf855, 0 0 0 4px #c2f2f3aa inset;
        cursor: pointer;
        letter-spacing: 0.04em;
        text-shadow: 0 2px 8px #fff9;
        transition: background 0.22s, box-shadow 0.17s;
    }
    .cta-button:hover {
        background: linear-gradient(90deg, #68e5ff 0%, #22baff 100%);
        box-shadow: 0 16px 64px #72e8ff99, 0 0 0 4px #23caf899 inset;
    }

    /* Info sections */
    .container-one {
        margin-top: 38px;
        margin-bottom: 38px;
        background: linear-gradient(120deg, #d1f4ff6b 0%, #a4eaff10 100%);
        border-radius: 34px;
        padding: 3.8rem 2rem 3.2rem 2rem;
        box-shadow: 0 4px 24px #81eaff25;
    }
    .selling-points {
        list-style: none;
        padding: 0;
        font-size: 1.08em;
    }
    .selling-points li {
        margin: 1.6rem 0;
        background: rgba(202, 240, 255, 0.20);
        border-radius: 18px;
        padding: 1rem 1.7rem;
        box-shadow: 0 2px 10px #bbecff21;
    }
    .fw-bolder {
        color: #0075c9;
        font-weight: bold;
        text-shadow: 0 1px 6px #bde3ff69;
    }
    /* Aero emoji circles */
    .aero-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #e2fbff 80%, #6fdcff 100%);
        width: 54px; height: 54px;
        border-radius: 50%;
        box-shadow: 0 2px 10px #82d7ff60, 0 0 0 3px #56e6f1cc inset;
        font-size: 2rem;
        margin-right: 12px;
    }
    /* Responsive tweaks */
    @media (max-width: 700px) {
        .aero-logo { width: 98vw; }
        .carousel-text h1 { font-size: 2.1rem; }
        .carousel-text { top: 20vw; }
        .main-aero-card, .container-one { padding: 12vw 2vw; }
    }
</style>

<img class="aero-logo" src="/UnsecuredContent/shklurb-logo.png" alt="Shklurb Logo">

<nav class="frutiger-navbar">
    <a href="/">Home</a>
    <a href="/games">Games</a>
    <a href="/users">Users</a>
    <a href="/about">About</a>
    <a href="/auth/login">Log In</a>
    <a href="/auth/signup">Sign Up</a>
</nav>

