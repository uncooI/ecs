@page
@model Roblox.Website.Pages.Contact

@section MetaTags {
    <title>Contact – Shklurb</title>
}

<style>
    @import url('https://fonts.googleapis.com/css?family=Segoe+UI:700,400|Tahoma:700,400');
    body { background: linear-gradient(135deg, #e2f0ff 0%, #7ad0ff 100%); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;}
    .aero-logo { margin: 42px auto 14px auto; display: block; width: 210px; max-width: 70vw; filter: drop-shadow(0 8px 16px #80e8fa88); border-radius: 24px;}
    .main-aero-card { background: linear-gradient(120deg, #f7fdff 60%, #8feeff30 100%); border-radius: 22px; box-shadow: 0 10px 60px #6fc6fc29, 0 2px 8px #7cdeff30; padding: 28px 18px 18px 18px; max-width: 410px; width: 96vw; text-align: center; margin: 26px auto 18px auto;}
    .main-aero-card h2 { font-size: 1.6em; color: #066bb8; margin-bottom: 10px; text-shadow: 0 2px 8px #e8fcff6b;}
    .main-aero-card p { color: #186b91; font-size: 1.06em; margin-bottom: 13px;}
    .aero-email { color: #1286db; font-weight: bold; background: #ecf7ff; padding: 6px 16px; border-radius: 13px; box-shadow: 0 2px 12px #b9eaff19;}
</style>

<img class="aero-logo" src="/UnsecuredContent/shklurb-logo.png" alt="Shklurb Logo">

<div class="main-aero-card">
    <h2>Contact Shklurb</h2>
    <p>Need help or have a question?<br>
    Email us at: <span class="aero-email">support@shklurb.com</span>
    <br><br>
    Please do not send sensitive personal info — just enough for us to help!</p>
</div>
