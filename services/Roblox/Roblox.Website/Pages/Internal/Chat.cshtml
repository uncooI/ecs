@page
@model Roblox.Website.Pages.Internal.Chat

@section MetaTags {
    <title>Shklurb Chat</title>
}

<style>
    @import url('https://fonts.googleapis.com/css?family=Segoe+UI:700,400|Tahoma:700,400');
    body { background:linear-gradient(135deg, #e2f0ff 0%, #7ad0ff 100%); font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;}
    .aero-logo { margin:24px auto 8px auto; display:block; width:170px; max-width:60vw; filter:drop-shadow(0 8px 10px #6ee8ff88); border-radius:14px;}
    .main-aero-card { background:linear-gradient(120deg, #f7fdff 60%, #8feeff30 100%); border-radius:16px; box-shadow:0 8px 34px #78eaff18; padding:16px 10px 8px 10px; max-width:530px; width:98vw; text-align:center; margin:14px auto 10px auto;}
    .main-aero-card h2 { font-size:1.3em; color:#037ae6; margin-bottom:10px;}
    .chat-box { background:#f4fbff; border-radius:13px; box-shadow:0 2px 10px #b3eaff18; padding:14px 12px 10px 12px; height:320px; max-height:56vw; overflow-y:auto; margin:0 auto 8px auto;}
    .chat-message { text-align:left; margin-bottom:8px; }
    .chat-user { color:#18a3ff; font-weight:bold; margin-right:7px;}
    .chat-time { font-size:0.82em; color:#87b9d1; margin-left:3px;}
    .chat-input { width:93%; margin:12px auto 0 auto; padding:12px; border-radius:13px; border:none; outline:none; font-size:1em; background:linear-gradient(100deg,#eafaff 80%,#c6f4ff 100%);}
    .cta-button { font-size:1em; background:linear-gradient(90deg,#30d5fc 10%,#5ec5ff 100%); border:none; color:#fff; padding:12px 36px; border-radius:16px; font-weight:bold; margin-top:10px; cursor:pointer;}
</style>

<img class="aero-logo" src="/UnsecuredContent/shklurb-logo.png" alt="Shklurb Logo">

<div class="main-aero-card">
    <h2>Live Chat</h2>
    <div class="chat-box" id="chatBox">
        @* Example (replace with your actual chat loop) *@
        @if (Model.Messages != null)
        {
            foreach (var msg in Model.Messages)
            {
                <div class="chat-message">
                    <span class="chat-user">@msg.Username</span>
                    <span>@msg.Content</span>
                    <span class="chat-time">[@msg.Timestamp.ToShortTimeString()]</span>
                </div>
            }
        }
        else
        {
            <div style="color:#1086e9;">No messages yet.</div>
        }
    </div>
    <form method="post" autocomplete="off">
        <input class="chat-input" type="text" name="chatMessage" placeholder="Say something..." maxlength="120" required />
        <button class="cta-button" type="submit">Send</button>
    </form>
</div>
